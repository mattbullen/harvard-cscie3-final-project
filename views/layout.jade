doctype html

html(lang='en').

    <head>
        
        <!-- Meta -->
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=Edge, chrome=1">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=3">
        <meta name="description" content="CSCI E-3 Final Project">
        <meta name="author" content="Matthew Bullen">
        
        <!-- Title & Favicon -->
        <title>CSCI E-3 Final Project</title>
        <link rel="shortcut icon" href="/img/favicon.png">
        
        <!-- CSS -->
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css">
        <link rel="stylesheet" href="//blueimp.github.io/Gallery/css/blueimp-gallery.min.css">
        <link rel="stylesheet" href="/css/bootstrap-image-gallery.min.css">
        <link rel="stylesheet" href="/css/site.css">
        
        <!-- JS -->
        <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"> </script>
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"> </script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/handlebars.js/3.0.1/handlebars.min.js"> </script>
        <script src="//blueimp.github.io/Gallery/js/jquery.blueimp-gallery.min.js"></script>
        <script src="/js/bootstrap-image-gallery.min.js"></script>
        <script src="/js/site.js"> </script>
        
    </head>
    
    <body>

        <div id="main" class="container">
          
            <div class="message-list"></div>
            
            <div class="row">
            
                <div class="col-md-5">
            
                    <form action="/message/send" method="POST">
                        
                        <div class="form-group">
                            <label for="confirm">Confirm your phone number:</label>
                            <input class="form-control" name="confirm" type="text" placeholder="Confirm your phone number to text images to your phone.">
                        </div>
                        
                        <div class="form-group">
                            <label for="message">Add an optional note?</label>
                            <input class="form-control" name="message" type="text" placeholder="This note will be sent with the image you selected.">
                        </div>
                        
                        <button id="send-text" class="btn btn-primary" name="send-text" type="submit">Text me!</button>
                        
                        <input id="imageURL" name="imageURL" type="hidden">
                        
                    </form>
            
                </div><!-- div.col-md-5 -->
                
                <div class="col-md-7">
            
                    <div id="search-bar">
                        <input id="search-google-input" class="form-control" name="search-google-input" type="text" placeholder="Enter a search term to search Google Images.">
                        <button id="search-google-button" class="btn btn-primary" type="button">Search Google Images</button>
                    </div>
                    
                    <div id="gallery">
                        
                        <div id="gallery-progress" class="progress">
                            <div id="gallery-progress-stripe" class="progress-bar progress-bar-striped active" role="progressbar"></div>
                        </div>

                        <div id="gallery-content">
                        
                            <script id="template" type="text/x-handlebars-template">

                                {{#images}}
                                
                                    <div id="slide-{{@index}}" class="slide">
                                    
                                        <a class="slide-thumbnail" href="{{link}}" title="{{link}}" data-gallery>
                                            
                                            <img class="slide-image" src="{{image.thumbnailLink}}" alt="{{width}}px x {{height}}px" />
                                        
                                        </a>
                                        
                                    </div>
                                
                                {{/images}}

                            </script>
                        
                        </div>
                        
                        <div id="gallery-display"></div>
                        
                    </div><!-- div#gallery -->
            
                </div><!-- div.col-md-7 -->
            
            </div><!-- div.row -->
            
        </div><!-- div#main -->
        
        <!-- Modal Gallery -->
        <div id="blueimp-gallery" class="blueimp-gallery" data-use-bootstrap-modal="false">
            <div class="slides"></div>
            <h3 class="title"></h3>
            <a class="prev">‹</a>
            <a class="next">›</a>
            <a class="close">×</a>
            <a class="play-pause"></a>
            <ol class="indicator"></ol> 
            <div class="modal fade">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" aria-hidden="true">&times;</button>
                            <h4 class="modal-title"></h4>
                        </div>
                        <div class="modal-body next"></div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary pull-left prev">
                                <i class="glyphicon glyphicon-chevron-left"></i>
                                Previous
                            </button>
                            <button type="button" class="btn btn-primary next">
                                Next
                                <i class="glyphicon glyphicon-chevron-right"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </body>